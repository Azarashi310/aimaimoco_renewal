mixin importStyleSheet(filePath)
    link(rel='stylesheet', type='text/css', href=filePath)

mixin importJavascript(filePath)
    script(type='text/javascript', src=filePath)

mixin settingViewPort(setting, widthSize)
    if setting == 'fixed'
        meta(name='viewport', content='width = '+widthSize+', initial-scale=1 maximum-scale=1')
    else if setting == 'default'
        meta(name='viewport', content='width = device-width, initial-scale=1,')

mixin img(imgPath, altText, width)
    if width == undefined
        img(src=imgPath, alt=altText)
    else
        img(src=imgPath, alt=altText, width=width)